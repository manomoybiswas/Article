<div class="page-wrapper bg-dark">
  <%= form_for :login, url: :sessions do |form| %>
    <div class="row align-items-center login-row justify-content-center no-gutters">
    <div class="col-12 col-sm-5 col-md-5 col-lg-5 col-xl-5 login-img-col">
      <div class="white-box login-box">
        <div class="image-box">
          <%= image_tag "sign_up.jpg", alt: "login-image", class: "signup-img" %>
        </div>
      </div>
    </div>
    <div class="col-12 col-sm-7 col-md-7 col-lg-5 col-xl-5">
      <div class="white-box login-box">
        <h1 class="title text-center"> LOGIN</h1>
        <br />
        <div class="form-group row">
          <%= form.label :email, for: "email", class:"col-12 col-md-2 col-form-label font-weight-bold"%>
          <div class="col-12 col-md-10">
            <%= form.email_field :email,for: "email", class: "form-control", autofocus: true, autocomplete: "email", placeholder: "Enter Email ID", required: true %>
          </div>
        </div>
        <div class="form-group row">
          <%= form.label :password, for: "password", class:"col-12 col-md-2 col-form-label font-weight-bold" %>
          <div class="col-12 col-md-10">
            <%= form.password_field :password, for: "password", class: "form-control", autocomplete: "current-password", placeholder: "Enter Password", required: true %>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-2"></div>
          <div class="col-10">
            <%= check_box_tag :remember_me, 1, params[:remember_me], class: "" %>
            <%= label_tag :remember_me %>
          </div>
        </div>
        <br />
        <div class="row align-items-center">
          <div class="col-8 text-left">
            <div class="col-12"><p class="reg-text text-left font-weight-bold">Forget password?</p></div>
            <div class="col-12"><%= link_to "RESET", new_password_reset_path, class: "btn btn-success btn-md font-weight-bold" %></div>
          </div>
          <div class="col-4 text-right">
            <%= form.submit "LOGIN", class:"btn btn-primary btn-lg font-weight-bold" %>
          </div>
        </div>
      </div>
    </div> 
  <% end %>
</div>
