<div class="row justify-content-center">
  <div class="col-12 col-md-12 col-lg-12 col-xl-7">
    <div class="white-box">
      <div class="index-table">
        <table class="table table-striped table-bordered table-hover table-dark">
          <caption class="text-center"> List of Users</caption>
          <thead>
            <tr class="text-center yellow">
              <th scope="col">#</th>
              <th scope="col">Name</th>
              <th scope="col">Email ID</th>
              <th scope="col">Phone No.</th>
              <th scope="col">Role</th>
              <%if current_user.admin %>
                <th scope="col">Edit</th>
                <th scope="col">Delete</th>
              <% end %>
            </tr>
          </thead>
          <% if @users.present? %>
            <tbody>
              <% @users.each do |user|%>
                <tr>
                  <th scope="row"><%= @users.index(user)+1 %></th>
                  <td><%= user.name%></td>
                  <td><%= user.email %></td>
                  <td><%= user.mobile %></td>
                  <td class="text-center">
                    <% if user.admin %>
                      ADMIN
                    <%else%> 
                    Regular user
                    <%end%>
                  </td>
                  <% if current_user.admin %>
                    <% unless user.admin %>
                      <td class="text-center">
                        <%= link_to "", edit_user_path(user), class:"fa fa-edit"%>
                      </td>
                      <td class="text-center">
                        <%= link_to "", user_path(user), data: {confirm: "Are you sure?" }, method: :delete, class:"fa fa-trash"%>
                      </td>
                    <% end %>
                  <% end %>
                </tr>
              <% end %>
            </tbody>
          <%end%>
        </table>
      </div>
    </div>
  </div>
</div>
